{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run main.py with HTTPS",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--port", "8443",
                "--https",
                "--certfile", "${workspaceFolder}/cert.pem",
                "--keyfile", "${workspaceFolder}/key.pem"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Run main.py with HTTP",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--port", "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}